<html lang="en">
	<head>
		<meta charset="utf-8">
    	<meta http-equiv="X-UA-Compatible" content="IE=edge">
   		<meta name="viewport" content="width=device-width, initial-scale=1">

   		<meta property="og:title" content="Hardware Registration"/> 

   		<title>Hardware Registration</title>
   		 <!-- Bootstrap -->
   		  <!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  		<%= stylesheet_link_tag "main.css" %>
  		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  		<link href='https://fonts.googleapis.com/css?family=Quicksand:400,300,700' rel='stylesheet' type='text/css'>
	</head>
	<body>
		<div class="star"></div>
		<div class="container" id="container">
			<div class="headers edit-header" id="header">
				<h1 class="main-header">Whaddaya buyin', stranger?</h1>
				<h2>Nice job getting that piece of hardware!</h2><br>
			</div>
		<div class="buttons-lower checkout row">
<% if current_user.hascredit %>
<%= form_tag("/new_checkout", method: "post") do %>
	<%= label_tag(:form_label, "Name: ") %>
	<%= label_tag(:info_label, current_user.first_name + " " + current_user.last_name) %><br>
	<%= label_tag(:form_label, "Phone number: ") %>
	<%= label_tag(:info_label, current_user.phone) %><br>
	<%= label_tag(:form_label, "Email: ") %>
	<!--<%= text_field_tag(:test) %>-->
	<%= label_tag(:info_label, current_user.email) %><br>
	<%= label_tag(:form_label, "Credit card information: ")%>
	<%= label_tag(:info_label, current_user.hascredit)%><br>
	<%= label_tag(:form_label, "Choose a piece of hardware:") %> <br>
	<%= select_tag :options, options_for_select(@hardwares) %><br>
	<!--<%= label_tag(:form_label, "Enter credit card info if necessary with Braintree") %> <br><br> -->
	</div>
	<div class="button-holder">
	<%= submit_tag("Submit") %> <br>
	</div>
<% end %>
<% else %>
	<h2><%= link_to "Please enter your credit card information on your profile page.", edit_user_registration_path%></h2>
<% end %>
</div>
</body>

<script>
			var limit=200, // Max number of stars
			body=document.getElementById("container");
			loop={
			 //initilizeing
			 start:function(){
			  for (var i=0; i <= limit; i++) {
			   var star=this.newStar();
			   star.style.top=this.rand()*100+"%";
			   star.style.left=this.rand()*100+"%";
			   star.style.webkitAnimationDelay=(this.rand()*3)+"s";
			   star.style.mozAnimationDelay=(this.rand()*3)+"s";
			   star.style.animationDelay=(this.rand()*3)+"s";
			   body.appendChild(star);
			  };
			 },
			 //to get random number
			 rand:function(){
			  return Math.random();
			 },
			 //createing html dom for star
			 newStar:function(){
			  var d = document.createElement('div');
			  d.innerHTML = '<div class="star"></div>';
			   return d.firstChild;
			 },
			};
			loop.start();
		</script>

</html>