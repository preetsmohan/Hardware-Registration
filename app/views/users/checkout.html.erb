<h1>Checkout some cool hardware!</h1> <br>

<%= form_tag do %>
	<%= label_tag(:form_label, "Name: *user's name goes here") %><br>
	<%= label_tag(:form_label, "Phone number: *user's phone number goes here") %><br>
	<%= label_tag(:form_label, "Email: " + current_user.email) %><br>
	<%= label_tag(:form_label, "Choose piece(s) of hardware:") %> 
	<%= select_tag :options, options_for_select(@hardwares) %><br>
	<%= label_tag(:form_label, "Enter credit card info if necessary with Braintree") %> <br><br>
	<%= submit_tag("Submit") %> <br>
<% end %>