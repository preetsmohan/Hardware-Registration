<html lang="en">
	<head>
		<meta charset="utf-8">
    	<meta http-equiv="X-UA-Compatible" content="IE=edge">
   		<meta name="viewport" content="width=device-width, initial-scale=1">

   		<meta property="og:title" content="Hardware Registration"/> 

   		<title>Hardware Registration</title>
   		 <!-- Bootstrap -->
   		  <!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  		<%= stylesheet_link_tag "main.css" %>
  		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  		<link href='https://fonts.googleapis.com/css?family=Quicksand:400,300,700' rel='stylesheet' type='text/css'>
	</head>

	<body>
		<div class="container" id='container'>
			<div class="row">
				<div class="headers" id="header">
					<div class="star"></div>
					<h1 class="logo"><img src="Planet.png" alt="planet"></h1>
					<h1 class="main-header">Welcome to Hardware Registration!</h1>
					<h2>Want some hardware? We have some hardware.</h2>
				<div id="signed-in">
					<% if user_signed_in? %>
  					Logged in as <strong><%= current_user.email %></strong>.
  					<% end %>
  				</div>

				</div>

				<%= link_to 'yo check out our hardware', inventory_path %><br>
				<%= link_to 'yo literally check out out hardware pls', checkout_path %>

			<!-- <div class="buttons row">
				<button id="log-in">Log in</button>
				<button id="sign-up">Sign up</button>
			<div class="buttons"> -->
				<div class="buttons row">
				<% if user_signed_in? %>
  					<br>
  					<%= link_to '<button id="edit">Edit Profile</button>'.html_safe, edit_user_registration_path, :class => 'button-link', :id => 'sign-up' %>
  					<%= link_to '<button id="logout">Log Out</button>'.html_safe, destroy_user_session_path, method: :delete, :class => 'button-link', :id => 'log-in' %>
				<% else %>
  					<%= link_to '<button id="signup">Sign Up</button>'.html_safe, new_user_registration_path, :class => 'button-link', :id => 'sign-up'  %>
  					<%= link_to '<button id="login">Log In</button>'.html_safe, new_user_session_path, :class => 'button-link', :id => 'log-in' %>
				<% end %>

				<!--<button id="log-in"><h1>Log in</h1></button>
				<button id="sign-up"><h1>Sign up</h1></button>-->
			</div>
			</div>
		</div>

		<script>
			var limit=200, // Max number of stars
			body=document.getElementById("container");
			loop={
			 //initilizeing
			 start:function(){
			  for (var i=0; i <= limit; i++) {
			   var star=this.newStar();
			   star.style.top=this.rand()*100+"%";
			   star.style.left=this.rand()*100+"%";
			   star.style.webkitAnimationDelay=(this.rand()*3)+"s";
			   star.style.mozAnimationDelay=(this.rand()*3)+"s";
			   star.style.animationDelay=(this.rand()*3)+"s";
			   body.appendChild(star);
			  };
			 },
			 //to get random number
			 rand:function(){
			  return Math.random();
			 },
			 //createing html dom for star
			 newStar:function(){
			  var d = document.createElement('div');
			  d.innerHTML = '<div class="star"></div>';
			   return d.firstChild;
			 },
			};
			loop.start();
		</script>
	</body>
</html>