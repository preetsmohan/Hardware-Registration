<h1>Listing Hardware!</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
 
  <% @hardwares.each do |hardware| %>
    <tr>
      <td><%= hardware.name %></td>
      <td><%= hardware.description %></td>
      <td><%= link_to 'Show', hardware_path(hardware) %></td>
      <td><%= link_to 'Edit', edit_hardware_path(hardware) %></td>
      <td><%= link_to 'Destroy', hardware_path(hardware),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Hardware', new_hardware_path %>